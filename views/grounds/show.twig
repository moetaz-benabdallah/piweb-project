<link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
<script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

<br><br>
<div class="container">

    <div class="panel panel-default">
        <div class="panel-heading">{{ ground.name }}</div>
        <div class="panel-body">
            <div class="glyphicon glyphicon-map-marker"></div> {{ ground.location }}<br>
            Type : {{ ground.type }} <br>
            Availability:
            {% if ground.is_available == 1 %}
                <div class="glyphicon glyphicon-ok"></div> <br>
            {% else %}
                <div class="glyphicon glyphicon-remove"></div> <br>
            {% endif %}

            Day disponibility:
            {% if ground.day == 1 %}
                <div class="glyphicon glyphicon-ok"></div> <br>
            {% else %}
                <div class="glyphicon glyphicon-remove"></div> <br>
            {% endif %}

            Night disponibility:
            {% if ground.night == 1 %}
                <div class="glyphicon glyphicon-ok"></div>
            {% else %}
                <div class="glyphicon glyphicon-remove"></div>
            {% endif %}
            <br><br>
            {% for picture in pictures %}
                    <img src="/uploads/{{ picture }}" style="width: 150px; height: 150px;"/>
            {% endfor %}

        </div>
    </div>
</div>



<form id        =  "uploadForm"
      enctype   =  "multipart/form-data"
      action    =  "/grounds/show/{{ ground._id }}"
      method    =  "post" style="margin-left: 90px;"
>
    <input type="file" name="userPhoto" />
    <input type="submit" value="Upload Image" name="submit">
    <a href="/grounds/delete/{{ ground._id }}" class="btn btn-danger btn-xs"><i class="glyphicon glyphicon-trash"></i></a>
</form>


<a href="/grounds/grounds" style="margin-left: 90px;">Grounds</a>