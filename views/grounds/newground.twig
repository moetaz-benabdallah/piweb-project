<div class="container">
    <h2>New ground</h2>
    <form action="/grounds/newground" method="post" class="form-horizontal" role="form">

        <div class="form-group" style="margin-left: -165px;">
            <label class="control-label col-sm-2" for="name">Name:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter Name">
            </div>
        </div>

        <div class="form-group" style="margin-left: -165px;">
            <label class="control-label col-sm-2" for="location">Location:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="location" name="location" placeholder="Enter location">
            </div>
        </div>

        <div class="form-group" style="margin-left: -165px;">
            <label class="control-label col-sm-2" for="location">Type:</label>
            <div class="col-sm-4">
                <input type="text" class="form-control" id="type" name="type" placeholder="Enter type">
            </div>
        </div>

        <div class="form-group" style="margin-left: 55px;">
            <div class="col-sm-10">
                <input type="radio" name="is_available" value="1"> Available
                <input type="radio" name="is_available" value="0"> Not available
            </div>
        </div>

        <div class="form-group"  style="margin-left: 55px;">
            <div class="col-sm-10">
                <input type="checkbox" name="day" value="1"> Day
                <input type="checkbox" name="night" value="1"> Night<br>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-default">Submit</button>
            </div>
        </div>

    </form>
</div>





